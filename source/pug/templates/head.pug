mixin head(data)
    -
        var title = pageTitle
        var projectName = "template-gulp"
        var author = "Lorem Lipsum"
        var description = "Test for Sheer"
        var keywords = ""

    head
        meta(charset="utf-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        meta(content="IE=edge" http-equiv="X-UA-Compatible")
        //- Title
        title= title

        //- Meta tags
        meta(name="description" content=description)
        meta(name="keywords" content=keywords)

        meta(name="format-detection" content="telephone=no")
        meta(name="format-detection" content="address=no")
        meta(name="theme-color", content="#ffffff")

        style.
            @font-face {
              font-family: 'Exo 2';
              font-style: normal;
              font-weight: 400;
              font-display: auto;
              src: local('Exo 2'), local('Exo2-Regular'), url(https://fonts.gstatic.com/s/exo2/v5/7cHmv4okm5zmbtYsK-4W4nIppT4.woff2) format('woff2');
              unicode-range: U+0400-045F, U+0490-0491, U+04B0-04B1, U+2116;
            }
            @font-face {
              font-family: 'Exo 2';
              font-style: normal;
              font-weight: 700;
              font-display: auto;
              src: local('Exo 2 Bold'), local('Exo2-Bold'), url(https://fonts.gstatic.com/s/exo2/v5/7cHrv4okm5zmbt6TDvs_wH8DnzcjTrA.woff2) format('woff2');
              unicode-range: U+0400-045F, U+0490-0491, U+04B0-04B1, U+2116;
            }
            @font-face {
              font-family: 'Exo 2';
              font-style: normal;
              font-weight: 400;
              font-display: auto;
              src: local('Exo 2'), local('Exo2-Regular'), url(https://fonts.gstatic.com/s/exo2/v5/7cHmv4okm5zmbtYoK-4W4nIp.woff2) format('woff2');
              unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
            }
            @font-face {
              font-family: 'Exo 2';
              font-style: normal;
              font-weight: 700;
              font-display: auto;
              src: local('Exo 2 Bold'), local('Exo2-Bold'), url(https://fonts.gstatic.com/s/exo2/v5/7cHrv4okm5zmbt6TDvs7wH8Dnzcj.woff2) format('woff2');
              unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
            }

        link(rel="preload" href="./assets/libs/styles/lib.css" as="style")
        link(rel="preload" href="./css/styles.min.css" as="style")
        //- Styles
        link(rel="stylesheet" href="./assets/libs/styles/lib.css")
        link(rel="stylesheet" href="./css/styles.min.css")
